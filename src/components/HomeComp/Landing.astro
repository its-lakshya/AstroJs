---
    import { getEntryBySlug } from "astro:content";
    import { Image } from 'astro:assets';
    import landingGroupImage from '../../assets/landingGroup.png'
    import landingImage from "../../assets/landingImage.png"

    const how_it_works = await getEntryBySlug("home", "index");
    
---

<div class="h-auto py-24 w-full flex items-center justify-between gap-x-20">
    <div class=" w-2/3 h-full flex flex-col gap-y-8 justify-center">
        <div class='text-7xl tracking-wide leading-[1.25]'>{how_it_works.data.page_title}</div>
        <div class='text-xl'>{how_it_works.data.content}</div>
        <a href={how_it_works.data.button?.link}class='w-36 h-10 bg-[#FAE86E] flex justify-center items-center rounded-full'>{how_it_works.data.button?.label} &nbsp; &#x2197;</a>
        <div class="flex flex-col gap-y-2 mt-12 w-1/2">
            <Image src={landingGroupImage} alt='group image'/>
            <span>{how_it_works.data.description.label}</span>
        </div>
    </div>
    <div class="flex flex-col items-center justify-center gap-y-4 w-1/3">
        <Image src={landingImage} alt="landing banner image" class=""/>
        <div class="flex flex-wrap gap-4">
        {how_it_works.data.services.map((entry)=> {
            return (
                <div class="w-auto px-4 rounded-full h-10 border border-black flex items-center justify-center">{entry}</div>
            )
        })}
        </div>
    </div>
</div>